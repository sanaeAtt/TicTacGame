<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".robotgame">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ph"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="160dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imgplyr2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/pgnmx" />

                    <TextView
                        android:id="@+id/nm2"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bgnm1"
                        android:fontFamily="@font/dancingscript_medium"
                        android:gravity="center"
                        android:text="Robot"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="17dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:background="@drawable/bgnm1"
                            android:fontFamily="@font/font3"
                            android:gravity="center"
                            android:textColor="@color/DarckBleu"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ptplyr2"
                            android:layout_width="17dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:background="@drawable/bgnm1"
                            android:fontFamily="@font/font3"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/DarckBleu"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="17dp"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:background="@drawable/bgnm1"
                        android:fontFamily="@font/font3"
                        android:gravity="center"
                        android:text=':'
                        android:textColor="@color/DarckBleu"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="17dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:background="@drawable/bgnm1"
                            android:fontFamily="@font/font3"
                            android:gravity="center"
                            android:textColor="@color/DarckBleu"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ptplyr1"
                            android:layout_width="17dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:background="@drawable/bgnm1"
                            android:fontFamily="@font/font3"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/DarckBleu"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/nm1"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bgnm1"
                        android:fontFamily="@font/dancingscript_medium"
                        android:gravity="center"
                        android:text="@string/pl1"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/nm1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <ImageView
                        android:id="@+id/imgplyr1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="120dp"
                        android:background="@drawable/pgnmo" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:shrinkColumns="*"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.100000024">

                    <TableRow>

                        <ImageView
                            android:id="@+id/btn_00"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/bggame_00"
                            android:onClick="onClick" />

                        <ImageView
                            android:id="@+id/btn_01"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/bggame"
                            android:onClick="onClick" />

                        <ImageView
                            android:id="@+id/btn_02"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/bggame_02"
                            android:onClick="onClick" />
                    </TableRow>

                    <TableRow>

                        <ImageView
                            android:id="@+id/btn_10"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/bggame"
                            android:onClick="onClick" />

                        <ImageView
                            android:id="@+id/btn_11"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/bggame"
                            android:onClick="onClick" />

                        <ImageView
                            android:id="@+id/btn_12"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/bggame"
                            android:onClick="onClick" />
                    </TableRow>

                    <TableRow>

                        <ImageView
                            android:id="@+id/btn_20"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/bggame_20"
                            android:onClick="onClick" />

                        <ImageView
                            android:id="@+id/btn_21"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/bggame"
                            android:onClick="onClick" />

                        <ImageView
                            android:id="@+id/btn_22"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/bggame_22"
                            android:onClick="onClick" />
                    </TableRow>
                </TableLayout>

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/Bleu"
                    android:fontFamily="@font/font3"
                    android:gravity="center"
                    android:onClick="reseBtn"
                    android:text="@string/rst"
                    android:textColor="@color/DarckBleu"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tableLayout"
                    app:layout_constraintVertical_bias="0.22000003" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:background="@drawable/outline"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:background="@drawable/shape3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:alpha="0.1"
                    android:background="@drawable/tictac_3"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>